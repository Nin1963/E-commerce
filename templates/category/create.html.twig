{% extends "base.html.twig" %}

{% block title %}
    Création d'une catégorie
{% endblock %}

{% block body %}
    <h1>Créer une catégorie</h1>
    {{ form_start(formView) }}

    {{ form_errors(formView) }}

    <div class="row">
        <div class="col-5">
            {{ form_row(formView.name) }} 
        </div>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">
            <i class="fas fa-save"></i>
            Enregistrer
        </button>
    </div>
    {{ form_end(formView) }}
{% endblock %}